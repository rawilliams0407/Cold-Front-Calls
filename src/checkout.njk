---
layout: base
title: Checkout
extra_scripts: '<script src="/assets/js/checkout.js"></script>'
---

<section class="relative pt-32 pb-20">
    <div class="max-w-4xl mx-auto px-6">
        <h1 class="text-5xl font-display font-bold text-white mb-12 text-center">Checkout</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Order Summary -->
            <div class="liquid-glass rounded-3xl p-8 h-fit">
                <h2 class="text-2xl font-display text-white mb-6">Order Summary</h2>
                <div id="checkout-cart-items" class="space-y-4 mb-6">
                    <!-- Items will be injected here -->
                    <p class="text-stone-light italic">Your cart is empty.</p>
                </div>
                <div class="border-t border-white/10 pt-4 flex justify-between items-center">
                    <span class="text-platinum uppercase tracking-widest text-sm">Total</span>
                    <span id="checkout-total" class="text-2xl font-bold text-ice-400">$0.00</span>
                </div>
            </div>

            <!-- Checkout Form -->
            <div class="liquid-glass rounded-3xl p-8">
                <h2 class="text-2xl font-display text-white mb-6">Shipping Information</h2>
                <form name="order-inquiry" method="POST" data-netlify="true" id="checkout-form" class="space-y-6">
                    <input type="hidden" name="form-name" value="order-inquiry" />
                    <!-- Hidden field for order details -->
                    <textarea name="order_details" id="order-details-field" class="hidden"></textarea>

                    <div>
                        <label class="block text-xs uppercase tracking-widest text-platinum-dark mb-2">Full Name</label>
                        <input type="text" name="name" required class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-platinum focus:outline-none focus:border-ice-500/50">
                    </div>

                    <div>
                        <label class="block text-xs uppercase tracking-widest text-platinum-dark mb-2">Email Address</label>
                        <input type="email" name="email" required class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-platinum focus:outline-none focus:border-ice-500/50">
                    </div>

                    <div>
                        <label class="block text-xs uppercase tracking-widest text-platinum-dark mb-2">Shipping Address</label>
                        <textarea name="address" required rows="3" class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-platinum focus:outline-none focus:border-ice-500/50"></textarea>
                    </div>

                    <div>
                        <label class="block text-xs uppercase tracking-widest text-platinum-dark mb-2">Special Notes</label>
                        <textarea name="notes" rows="2" class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-platinum focus:outline-none focus:border-ice-500/50"></textarea>
                    </div>

                    <button type="submit" id="submit-order" class="w-full py-4 bg-platinum text-obsidian font-bold rounded-full uppercase tracking-widest transition-all hover:bg-white hover:-translate-y-1 shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                        Place Order Inquiry
                    </button>
                    <p class="text-[10px] text-stone-light text-center mt-4">
                        * This is an inquiry form. We will contact you to confirm the order and arrange payment.
                    </p>
                </form>

                <!-- Success Message (Visible after submission if handled by JS, or Netlify handles redirect) -->
                <div id="success-message" class="hidden text-center py-10">
                    <h3 class="text-2xl font-display text-ice-400 mb-4">Thank You!</h3>
                    <p class="text-stone-light">Your order inquiry has been received. We'll be in touch soon.</p>
                    <a href="/" class="inline-block mt-6 text-platinum hover:text-white underline tracking-widest text-xs uppercase">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</section>
