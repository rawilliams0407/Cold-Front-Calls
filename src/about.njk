---
layout: base
title: About Cold Front Calls
---

<!-- Hero Section -->
<section class="relative pt-32 pb-24 overflow-hidden">
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-obsidian via-obsidian/90 to-obsidian z-10"></div>
        <img src="https://images.unsplash.com/photo-1505231649931-e405a7695393?q=80&w=2000&auto=format&fit=crop" class="w-full h-full object-cover opacity-40 ken-burns" alt="About Background">
    </div>

    <div class="relative z-20 max-w-4xl mx-auto px-6 text-center">
        <div class="liquid-glass rounded-3xl p-12 md:p-16">
            <h2 class="tracking-[0.3em] uppercase text-sm font-bold text-platinum mb-4">{{ aboutpage.heroSubtitle }}</h2>
            <h1 class="text-6xl md:text-7xl font-display font-bold text-white mb-6">
                {{ aboutpage.heroTitle }} <span class="radar-text text-glow-ice">{{ aboutpage.heroTitleAccent }}</span>
            </h1>
            <p class="text-stone-light text-xl font-light leading-relaxed">
                {{ aboutpage.heroDescription }}
            </p>
        </div>
    </div>
</section>

<!-- Story Section -->
<section class="max-w-7xl mx-auto px-6 py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
            <span class="text-platinum font-bold uppercase tracking-[0.2em] text-xs mb-4 block">{{ aboutpage.storyLabel }}</span>
            <h2 class="text-4xl md:text-5xl font-display text-white mb-8">{{ aboutpage.storyHeading }}</h2>
            <div class="space-y-6 text-stone-light text-lg font-light leading-relaxed">
                {% for paragraph in aboutpage.storyParagraphs %}
                <p>{{ paragraph }}</p>
                {% endfor %}
            </div>
        </div>

        <div class="relative">
            <div class="rounded-[2rem] overflow-hidden border border-white/10 shadow-2xl">
                <img src="https://images.unsplash.com/photo-1516934024742-b461fba47600?q=80&w=800&auto=format&fit=crop" class="w-full h-[500px] object-cover" alt="Craftsmanship">
            </div>
            <!-- Decorative Elements -->
            <div class="absolute -bottom-6 -left-6 w-32 h-32 border border-platinum/30 rounded-2xl -z-10"></div>
            <div class="absolute -top-6 -right-6 w-24 h-24 border border-ice-500/30 rounded-2xl -z-10"></div>
        </div>
    </div>
</section>

<!-- Values Grid -->
<section class="max-w-7xl mx-auto px-6 py-24 border-t border-white/5">
    <div class="text-center mb-16">
        <span class="text-platinum font-bold uppercase tracking-[0.2em] text-xs mb-4 block">{{ aboutpage.valuesLabel }}</span>
        <h2 class="text-4xl md:text-5xl font-display text-white">{{ aboutpage.valuesHeading }}</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {% set valueIcons = [
            '<path d="M5 12h14M12 5l7 7-7 7"/>',
            '<circle cx="12" cy="12" r="10"/><path d="M12 8v8M8 12h8"/>',
            '<path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6M18 9h1.5a2.5 2.5 0 0 0 0-5H18M4 22h16M10 14.66V17c0 .55.45 1 1 1h2c.55 0 1-.45 1-1v-2.34M12 4v4M12 12a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>',
            '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2M9 7a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>'
        ] %}
        {% for value in aboutpage.values %}
        <div class="liquid-glass rounded-2xl p-8 text-center group hover:bg-white/10 transition-all duration-500">
            <div class="w-14 h-14 mx-auto mb-6 rounded-full bg-gradient-to-br from-platinum/20 to-platinum/5 flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-platinum">{{ valueIcons[loop.index0] | safe }}</svg>
            </div>
            <h3 class="text-xl font-display text-white mb-3">{{ value.title }}</h3>
            <p class="text-stone-light text-sm font-light leading-relaxed">{{ value.description }}</p>
        </div>
        {% endfor %}
    </div>
</section>

<!-- CTA Banner -->
<section class="max-w-7xl mx-auto px-6 py-16 mb-12">
    <div class="relative rounded-3xl overflow-hidden min-h-[400px] flex items-center">
        <div class="absolute inset-0 z-0 bg-obsidian-light">
            <div class="absolute inset-0 bg-gradient-to-r from-obsidian via-obsidian/80 to-obsidian/40 z-10"></div>
            <img src="/assets/hero-slideshow/04.jpg" class="w-full h-full object-cover opacity-60" alt="Hunting Field">
        </div>

        <div class="relative z-20 p-12 md:p-16 max-w-xl">
            <h3 class="text-4xl md:text-5xl font-display text-white mb-4">{{ aboutpage.ctaHeading }}</h3>
            <p class="text-stone-light mb-8 text-lg font-light leading-relaxed">{{ aboutpage.ctaDescription }}</p>
            <a href="/shop" class="inline-flex items-center px-10 py-4 bg-platinum text-obsidian font-bold text-sm rounded-full shadow-[0_0_20px_rgba(228,228,231,0.2)] transition-all hover:bg-white uppercase tracking-widest hover:-translate-y-1">
                {{ aboutpage.ctaButtonText }}
            </a>
        </div>
    </div>
</section>
