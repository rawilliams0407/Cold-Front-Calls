<div id="upsell-modal-wrapper" class="hidden">
    <!-- Backdrop -->
    <div id="upsell-backdrop" class="fixed inset-0 bg-black/80 backdrop-blur-md z-[80] opacity-0 transition-opacity duration-300"></div>

    <!-- Modal -->
    <div id="upsell-modal" class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-lg z-[90] p-4 scale-90 opacity-0 transition-all duration-300">
        <div class="bg-obsidian-light rounded-3xl border border-white/10 overflow-hidden shadow-2xl relative">
            <!-- Close Button -->
            <button id="close-upsell" class="absolute top-4 right-4 p-2 rounded-full hover:bg-white/10 transition-colors text-stone-light hover:text-white z-10">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
            </button>

            <!-- Product Image -->
            <div class="relative h-64 bg-obsidian-highlight overflow-hidden">
                <img id="upsell-image" src="" alt="Upsell Product" class="w-full h-full object-cover opacity-80">
                <div class="absolute inset-0 bg-gradient-to-t from-obsidian-light via-transparent to-transparent"></div>
                <div class="absolute top-4 left-4 bg-platinum text-obsidian px-4 py-1.5 rounded-full font-bold text-xs uppercase tracking-widest">
                    Best Seller
                </div>
            </div>

            <!-- Content -->
            <div class="p-8 text-center">
                <h2 class="text-3xl font-display font-bold text-white mb-4">Complete Your Lanyard</h2>
                <p class="text-stone-light text-lg mb-6 leading-relaxed">
                    Most hunters carry both. Add a <span id="upsell-category-label" class="text-platinum font-semibold">Duck</span> Call to be ready for anything.
                </p>

                <!-- Product Card Small -->
                <div class="bg-obsidian rounded-2xl p-5 mb-8 border border-white/5 flex items-center gap-4 text-left">
                    <div class="w-16 h-16 rounded-xl overflow-hidden bg-obsidian-highlight flex-shrink-0">
                        <img id="upsell-thumb" src="" alt="Thumbnail" class="w-full h-full object-cover">
                    </div>
                    <div class="flex-1">
                        <h3 id="upsell-title" class="text-white font-display font-medium">Product Name</h3>
                        <p id="upsell-category" class="text-xs text-stone-light uppercase tracking-wider">Category</p>
                    </div>
                    <span id="upsell-price" class="text-platinum font-bold text-xl">$0.00</span>
                </div>

                <!-- Actions -->
                <div class="space-y-3">
                    <button id="accept-upsell" class="w-full py-4 bg-platinum text-obsidian font-bold rounded-full hover:bg-white transition-all uppercase tracking-widest text-sm shadow-[0_0_20px_rgba(228,228,231,0.3)] flex items-center justify-center gap-2 group hover:scale-[1.02]">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                        Yes, Add to Order
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                    </button>
                    <button id="decline-upsell" class="w-full py-4 border border-white/20 hover:bg-white/5 text-white font-bold rounded-full transition-all uppercase tracking-widest text-sm">
                        No, Continue to Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
