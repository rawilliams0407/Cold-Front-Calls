<div id="cart-sidebar-wrapper" class="hidden">
    <!-- Backdrop -->
    <div id="cart-backdrop" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-[60] opacity-0 transition-opacity duration-300"></div>

    <!-- Sidebar -->
    <div id="cart-sidebar" class="fixed right-0 top-0 h-full w-full max-w-md bg-obsidian-light border-l border-white/10 z-[70] flex flex-col shadow-2xl translate-x-full transition-transform duration-500 ease-in-out">
        <!-- Header -->
        <div class="flex items-center justify-between p-6 border-b border-white/10">
            <div class="flex items-center gap-3">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-platinum"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                <h2 class="text-2xl font-display font-bold text-white">Your Cart</h2>
            </div>
            <button id="close-cart" class="p-2 rounded-full hover:bg-white/10 transition-colors text-stone-light hover:text-white">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
            </button>
        </div>

        <!-- Cart Items -->
        <div id="cart-items-container" class="flex-1 overflow-y-auto p-6 space-y-4">
            <!-- Empty State (default) -->
            <div id="cart-empty-state" class="flex flex-col items-center justify-center h-full text-center">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-white/20 mb-4"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                <p class="text-stone-light text-lg">Your cart is empty</p>
                <p class="text-white/40 text-sm mt-2">Add some calls to get started</p>
            </div>
            <!-- Dynamic Items will be injected here -->
            <div id="cart-items-list" class="space-y-4 hidden"></div>
        </div>

        <!-- Footer -->
        <div id="cart-footer" class="p-6 border-t border-white/10 space-y-4 hidden">
            <div class="flex items-center justify-between">
                <span class="text-stone-light text-lg">Subtotal</span>
                <span id="cart-subtotal" class="text-white font-display font-bold text-2xl">$0.00</span>
            </div>
            <button id="cart-checkout-btn" class="w-full py-4 bg-platinum text-obsidian font-bold rounded-full hover:bg-white transition-colors uppercase tracking-widest text-sm shadow-[0_0_20px_rgba(228,228,231,0.2)]">
                Checkout
            </button>
        </div>
    </div>
</div>
